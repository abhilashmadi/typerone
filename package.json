{
	"name": "typerone",
	"version": "1.0.0",
	"main": "server.js",
	"type": "module",
	"scripts": {
		"dev": "node --env-file=.development.env --watch --watch-preserve-output server.js",
		"start": "node --env-file=.production.env server.js",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"prepare": "lefthook install",
		"format": "biome format --write .",
		"lint": "biome lint --write .",
		"check": "biome check --write .",
		"ci": "biome ci ."
	},
	"dependencies": {
		"@fastify/cookie": "^11.0.2",
		"@fastify/cors": "^11.1.0",
		"bcryptjs": "^3.0.2",
		"fastify": "^5.6.1",
		"fastify-plugin": "^5.1.0",
		"jsonwebtoken": "^9.0.2",
		"mongoose": "^8.19.2",
		"pino": "^10.1.0",
		"zod": "^4.1.12"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.2",
		"@vitest/coverage-v8": "^4.0.6",
		"@vitest/ui": "4.0.6",
		"lefthook": "^2.0.2",
		"mongodb-memory-server": "^10.3.0",
		"pino-pretty": "^13.1.2",
		"supertest": "^7.1.4",
		"vitest": "^4.0.6"
	}
}
